<div class="row jumbotron">
  <div class="col-md-4 col-md-offset-4 left">
    <%= form_tag :authentications do %>
      <div id="form-gap">
        <%= label_tag :Email %>
        <%= text_field :auth_params, :email %>
      </div>

      <div id="form-gap">
        <%= label_tag :Password %>
        <%= password_field :auth_params, :password %>
      </div>

      <div id="form-gap">
        <%= submit_tag 'Login', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
