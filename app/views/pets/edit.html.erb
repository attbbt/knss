<%= simple_form_for @pet do |f| %>
  <%= f.input :name %><br>
  <%= f.input :pet_type do %>
    <%= f.select :pet_type, options_for_select(%w(dog cat bird))%><br>
  <% end %><br>
  <%= f.input :breed %><br>
  <%= f.input :age %><br>
  <%= f.input :weight %><br>
  <%= f.input :date_of_last_visit, as: :date %><br>

  <%= f.button :submit %>
<% end %>
